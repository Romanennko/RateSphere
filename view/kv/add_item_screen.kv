#:import AddItemScreen view.screens.add_item_screen.AddItemScreen

<AddItemScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        theme_bg_color: "Custom"
        md_bg_color: app.theme_cls.backgroundColor

        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"
                    on_release: app.open_app_bar_menu(self)

            MDTopAppBarTitle:
                text: "Add Item"

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "account-circle-outline"
                    on_release: app.open_profile_menu(self)

        Widget:
            size_hint_y: 1

        MDCard:
            style: "elevated"
            orientation: 'vertical'
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: None, None
            width: self.minimum_width
            height: self.minimum_height
            padding: "30dp"
            spacing: "20dp"
            radius: [15,]

            MDLabel:
                id: error_label
                text: ""
                halign: "center"
                theme_text_color: "Error"
                adaptive_height: True
                size_hint_y: None
                height: self.texture_size[1]
                padding: dp(5)

            MDTextField:
                id: item_name
                mode: "outlined"
                size_hint_x: None
                width: "780dp"
                pos_hint: {"center_x": 0.5}

                MDTextFieldLeadingIcon:
                    icon: "pencil"

                MDTextFieldHintText:
                    text: "Item name"

            MDTextField:
                id: item_alt_name
                mode: "outlined"
                size_hint_x: 1
                pos_hint: {"center_x": 0.5}

                MDTextFieldLeadingIcon:
                    icon: "pencil-outline"

                MDTextFieldHintText:
                    text: "Alternative item name"

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "20dp"
                padding: "10dp"
                pos_hint: {"center_x": 0.5}
                size_hint_y: None
                height: "48dp"

                MDButton:
                    id: item_type
                    pos_hint: {"center_x": 0.5}
                    on_release: root.open_type_menu(self)

                    MDButtonText:
                        id: type_button_text
                        text: "Select type"

                MDButton:
                    id: item_status
                    pos_hint: {"center_x": 0.5}
                    on_release: root.open_status_menu(self)

                    MDButtonText:
                        id: status_button_text
                        text: "Select status"

                MDButton:
                    id: rating_button
                    style: "outlined"
                    pos_hint: {"center_x": 0.5}
                    on_release: root.open_rating_dialog()
                    size_hint_x: 0.8

                    MDButtonText:
                        id: rating_button_text
                        text: "Set Rating"

            MDTextField:
                id: item_review
                mode: "filled"
                multiline: True
                size_hint_x: 1
                size_hint_y: None
                height: dp(120)

                MDTextFieldHelperText:
                    text: "Review (Optional)"
                    mode: "persistent"

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: "20dp"
                padding: "10dp"
                pos_hint: {"center_x": 1.25}
                size_hint_y: None
                height: "48dp"

                MDButton:
                    style: "outlined"
                    on_release: root.clear_fields()

                    MDButtonText:
                        text: "Cancel"

                MDButton:
                    style: "filled"
                    on_release: app.add_item_controller.save_new_item(item_name.text, item_alt_name.text, type_button_text.text, status_button_text.text, item_review.text, root.rating_data)

                    MDButtonText:
                        text: "Save"

        Widget:
            size_hint_y: 1

<CriterionRatingRow@MDBoxLayout>:
    criterion_id: None
    criterion_name: ""
    rating_value: 0.0
    adaptive_height: True
    spacing: "10dp"
    padding: "5dp"

    MDLabel:
        text: root.criterion_name
        size_hint_x: 0.4
        adaptive_height: True
        pos_hint: {"center_y": 0.5}

    MDSlider:
        id: slider
        min: 1
        max: 10
        step: 0.5
        value: root.rating_value if root.rating_value >= 1 else 5
        size_hint_x: 0.5
        value_track: True
        on_value: root.rating_value = self.value

    MDLabel:
        id: slider_label
        text: f"{root.rating_value:.1f}" if root.rating_value >= 1 else "N/A"
        size_hint_x: 0.1
        halign: "right"
        adaptive_height: True
        pos_hint: {"center_y": 0.5}